<Window x:Class="Aplikace.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aplikace" xmlns:entity="clr-namespace:Aplikace.data.Entity" d:DataContext="{d:DesignInstance Type=entity:User}"
        mc:Ignorable="d"
        Height="600" Width="900" ResizeMode="NoResize" Background="Transparent" WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True" >

    <Window.Resources>
        <Style TargetType="TabItem" x:Key="ModernTabItemStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" Background="Transparent">
                            <ContentPresenter x:Name="ContentSite"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        ContentSource="Header"
        Margin="15,10"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">

                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="white" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                
                                <Setter TargetName="Border" Property="Background" Value="Transparent"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>

                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>




    <Border CornerRadius="20" BorderBrush="Transparent" BorderThickness="0">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientStop Offset="0" Color="#bde0fe" />
                <GradientStop Offset="0.5" Color="#a2d2ff" />
                <GradientStop Offset="1" Color="#0096c7" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid Background="Transparent">

            <TextBlock  VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,20,400,0" FontSize="18" Foreground="#333333" FontWeight="Bold" Opacity="0.6">
                <Run Text="Logged in: " />
<Run Text="{Binding Name}" />  
            </TextBlock>
            <TabControl Name="MainTabControl" Background="Transparent" TabStripPlacement="Left" BorderThickness="0,0,0,0" VerticalAlignment="Center" Height="600" >
                <TabItem  Style="{StaticResource ModernTabItemStyle}">
                    <!-- Obsah pro záložku 1 -->
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/home.png" Width="48" Height="48" Margin="0 0 5 0" />
                           
                        </StackPanel>
                    </TabItem.Header>

                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350" Height="400">
                        <Label VerticalAlignment="Center" HorizontalAlignment="Center" Content="List of Employees"/>
                        <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False">
                            
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                                <DataGridTextColumn Header="Surname" Binding="{Binding Surname}" Width="*" />
                                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="*" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </TabItem>
                <TabItem  Style="{StaticResource ModernTabItemStyle}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/calendar.png" Width="48" Height="48" Margin="0 0 5 0" />
                           
                        </StackPanel>
                    </TabItem.Header>
                    <!-- Obsah pro záložku 2 -->
                </TabItem>
                <TabItem  Style="{StaticResource ModernTabItemStyle}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/list.png" Width="48" Height="48" Margin="0 0 5 0" />

                        </StackPanel>
                    </TabItem.Header>
                    <!-- Obsah pro záložku 3 -->
                </TabItem>
                <TabItem  Style="{StaticResource ModernTabItemStyle}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/chat.png" Width="48" Height="48" Margin="0 0 5 0" />

                        </StackPanel>
                    </TabItem.Header>
                    <!-- Obsah pro záložku 4 -->
                </TabItem>
                <TabItem  Style="{StaticResource ModernTabItemStyle}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/settings.png" Width="48" Height="48" Margin="0 0 5 0" />

                        </StackPanel>
                    </TabItem.Header>
                    <!-- Obsah pro záložku 5 -->
                </TabItem>
            </TabControl>
            <Image x:Name="closeButton" Margin="868,5,5,568" Source="/assets/close.png" Stretch="Fill" MouseLeftButtonDown="closeButton_MouseLeftButtonDown" Height="27" Width="27"/>
        </Grid>
    </Border>
</Window>
