<Window x:Class="Aplikace.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aplikace" xmlns:entity="clr-namespace:Aplikace.data.Entity" d:DataContext="{d:DesignInstance Type=entity:User}"
        mc:Ignorable="d"
        Height="600" Width="900" ResizeMode="NoResize" Background="Transparent" WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True" >

    <Window.Resources>

        <Style TargetType="TabItem" x:Key="ModernTabItemStyle">
            <Setter Property="Background" Value="AliceBlue"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10,0,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            
            

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" Background="Transparent" CornerRadius="10" BorderBrush="AliceBlue" BorderThickness="0">
                            <ContentPresenter x:Name="ContentSite"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      ContentSource="Header"
                                      Margin="25,10"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="3" Opacity="0.2"/>
                            </Border.Effect>
                        </Border>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="AliceBlue" Opacity="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="Transparent"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="DataGridHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#007ACC" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridColumnHeader}">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>




    <Border CornerRadius="20" BorderBrush="Transparent" BorderThickness="0">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientStop Offset="0" Color="#bde0fe" />
                <GradientStop Offset="0.5" Color="#a2d2ff" />
                <GradientStop Offset="1" Color="#0096c7" />
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect ShadowDepth="3" Opacity="0.2"/>
        </Border.Effect>

        <Grid >

            
            
                 <TabControl Name="mainTabControl"   TabStripPlacement="Left" BorderThickness="0,0,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Opacity="0.7" Margin="10,10,10,10">
                <TabControl.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Offset="0" Color="#bde0fe" />
                        <GradientStop Offset="0.5" Color="#a2d2ff" />
                        <GradientStop Offset="1" Color="#0096c7" />
                    </LinearGradientBrush>
                </TabControl.Background>
                <TabItem x:Name="UserTabItem"  Style="{StaticResource ModernTabItemStyle}" Margin="0,0,0,0">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/user.png" Width="48" Height="48" Margin="0,0,0,0" />

                        </StackPanel>
                    </TabItem.Header>
                    <Border Background=" white" BorderBrush=" white" Width="480" Height="325" CornerRadius="20">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="3" Opacity="0.2"/>
                        </Border.Effect>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="480" Height="325" Background="Transparent" >
                            <StackPanel.Resources>
                                <Style TargetType="Label">
                                    <Setter Property="Foreground" Value="#333" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="FontSize" Value="24" />
                                    <Setter Property="Margin" Value="20 5 " />
                                </Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#333" />
                                    <Setter Property="FontSize" Value="20" />
                                    <Setter Property="Margin" Value="10 0" />
                                    <Setter Property="VerticalAlignment" Value="Center" />

                                </Style>
                            </StackPanel.Resources>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                                <Image x:Name="userImage" Width="90" Height="90"  />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                <Label Content="Username:" />
                                <TextBlock Text="{Binding Name}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                <Label Content="First Name:" />
                                <TextBlock Text="{Binding Employee.Name}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                <Label Content="Last Name:" />
                                <TextBlock Text="{Binding Employee.Surname}" />
                            </StackPanel>
                        </StackPanel>


                    </Border>
                   
                </TabItem>
                <TabItem x:Name="mainMenuTabItem"  Style="{StaticResource ModernTabItemStyle}" >

                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/home.png" Width="48" Height="48" Margin="0 0 5 0" />

                        </StackPanel>
                    </TabItem.Header>

                    <!-- Obsah pro záložku 1 -->
                    <StackPanel>
         
                        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Width="347" Height="449" Margin="50,58,0,0">

                            <Label VerticalAlignment="Center" HorizontalAlignment="Center" Content="List of Employees"/>
                            <DataGrid x:Name="employeeDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" GridLinesVisibility="None" RowBackground="#F3F3F3" AlternatingRowBackground="White" SelectionMode="Single" SelectionUnit="FullRow">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" HeaderStyle="{StaticResource DataGridHeaderStyle}" />
                                    <DataGridTextColumn Header="Surname" Binding="{Binding Surname}" Width="*" HeaderStyle="{StaticResource DataGridHeaderStyle}" />
                                    <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="*" HeaderStyle="{StaticResource DataGridHeaderStyle}" />
                                </DataGrid.Columns>
                            </DataGrid>

                            
                        </StackPanel>
                    </StackPanel>

                </TabItem>
                <TabItem x:Name="PatientTabItem"  Style="{StaticResource ModernTabItemStyle}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/medicalCard.png" Width="48" Height="48" Margin="0 0 5 0" />

                        </StackPanel>
                    </TabItem.Header>
                    <!-- Obsah pro záložku  -->
                </TabItem>
                <TabItem x:Name="calendarTabItem"  Style="{StaticResource ModernTabItemStyle}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/calendar.png" Width="48" Height="48" Margin="0 0 5 0" />

                        </StackPanel>
                    </TabItem.Header>
                    <!-- Obsah pro záložku 2 -->
                </TabItem>
                <TabItem x:Name="listTabItem"  Style="{StaticResource ModernTabItemStyle}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/list.png" Width="48" Height="48" Margin="0 0 5 0" />

                        </StackPanel>
                    </TabItem.Header>
                    <!-- Obsah pro záložku 3 -->
                </TabItem>
                <TabItem x:Name="chatTabItem"  Style="{StaticResource ModernTabItemStyle}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/chat.png" Width="48" Height="48" Margin="0 0 5 0" />

                        </StackPanel>
                    </TabItem.Header>
                    <!-- Obsah pro záložku 4 -->
                </TabItem>
                <TabItem x:Name="settingsTabItem"  Style="{StaticResource ModernTabItemStyle}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/settings.png" Width="48" Height="48" Margin="0 0 5 0" />

                        </StackPanel>
                    </TabItem.Header>
                    <!-- Obsah pro záložku 5 -->
                </TabItem>
                    
               
            </TabControl>

            <Button x:Name="logoutButton" Width="100" Height="50" Content="Log Out" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" Foreground="#333" BorderThickness="0" FontSize="15" Click="logoutButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="white" />
                                <Setter Property="Opacity" Value="0.5" />
                                <!-- Barva pozadí při hover -->
                                <Setter Property="Foreground" Value="#333" />
                                <!-- Barva textu při hover -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>


            <Image x:Name="closeButton" Margin="868,5,5,568" Source="/assets/close.png" Stretch="Fill" MouseLeftButtonDown="closeButton_MouseLeftButtonDown" Height="27" Width="27"/>
        </Grid>
    </Border>
</Window>
