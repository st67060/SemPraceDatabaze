<Window x:Class="Aplikace.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aplikace" xmlns:entity="clr-namespace:Aplikace.data.Entity" d:DataContext="{d:DesignInstance Type=entity:User}"
        mc:Ignorable="d"
        Height="600" Width="900" ResizeMode="NoResize" Background="Transparent" WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True" >

    <Window.Resources>

        <Style TargetType="TabItem" x:Key="ModernTabItemStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" Background="Transparent" CornerRadius="15,0,0,15" BorderBrush="AliceBlue" BorderThickness="1">
                            <ContentPresenter x:Name="ContentSite"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      ContentSource="Header"
                                      Margin="12,7"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="AliceBlue" Opacity="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="Transparent"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="DataGridHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#007ACC" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridColumnHeader}">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>




    <Border CornerRadius="20" BorderBrush="Transparent" BorderThickness="0">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientStop Offset="0" Color="#bde0fe" />
                <GradientStop Offset="0.5" Color="#a2d2ff" />
                <GradientStop Offset="1" Color="#0096c7" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid >

            <TextBlock  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="675,566,0,0" FontSize="18" Foreground="#333333" FontWeight="Bold" Opacity="0.6">
                <Run Text="Logged in: " />
            <Run Text="{Binding Name}" />
            </TextBlock>
            <TabControl Name="mainTabControl"  Background="AliceBlue" TabStripPlacement="Left" BorderThickness="0,0,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="0,60,0,0" Opacity="0.7" Width="900">
                <TabItem x:Name="mainMenuTabItem"  Style="{StaticResource ModernTabItemStyle}" Margin="0,-2,0,0">

                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/home.png" Width="48" Height="48" Margin="0 0 5 0" />

                        </StackPanel>
                    </TabItem.Header>

                    <!-- Obsah pro záložku 1 -->
                    <StackPanel>
         
                        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Width="347" Height="449" Margin="50,58,0,0">

                            <Label VerticalAlignment="Center" HorizontalAlignment="Center" Content="List of Employees"/>
                            <DataGrid x:Name="employeeDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" GridLinesVisibility="None" RowBackground="#F3F3F3" AlternatingRowBackground="White" SelectionMode="Single" SelectionUnit="FullRow">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" HeaderStyle="{StaticResource DataGridHeaderStyle}" />
                                    <DataGridTextColumn Header="Surname" Binding="{Binding Surname}" Width="*" HeaderStyle="{StaticResource DataGridHeaderStyle}" />
                                    <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="*" HeaderStyle="{StaticResource DataGridHeaderStyle}" />
                                </DataGrid.Columns>
                            </DataGrid>

                            
                        </StackPanel>
                    </StackPanel>

                </TabItem>
                <TabItem x:Name="calendarTabItem"  Style="{StaticResource ModernTabItemStyle}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/calendar.png" Width="48" Height="48" Margin="0 0 5 0" />

                        </StackPanel>
                    </TabItem.Header>
                    <!-- Obsah pro záložku 2 -->
                </TabItem>
                <TabItem x:Name="listTabItem"  Style="{StaticResource ModernTabItemStyle}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/list.png" Width="48" Height="48" Margin="0 0 5 0" />

                        </StackPanel>
                    </TabItem.Header>
                    <!-- Obsah pro záložku 3 -->
                </TabItem>
                <TabItem x:Name="chatTabItem"  Style="{StaticResource ModernTabItemStyle}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/chat.png" Width="48" Height="48" Margin="0 0 5 0" />

                        </StackPanel>
                    </TabItem.Header>
                    <!-- Obsah pro záložku 4 -->
                </TabItem>
                <TabItem x:Name="settingsTabItem"  Style="{StaticResource ModernTabItemStyle}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/settings.png" Width="48" Height="48" Margin="0 0 5 0" />

                        </StackPanel>
                    </TabItem.Header>
                    <!-- Obsah pro záložku 5 -->
                </TabItem>
            </TabControl>
            <Image x:Name="closeButton" Margin="868,5,5,568" Source="/assets/close.png" Stretch="Fill" MouseLeftButtonDown="closeButton_MouseLeftButtonDown" Height="27" Width="27"/>
            <Label Content="Dentist information system" HorizontalAlignment="Left" VerticalAlignment="Top" Height="58" Width="487" FontSize="36" FontWeight="Bold" Margin="15,2,0,0">
                <Label.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF333333" Offset="0.315"/>
                        <GradientStop Color="#FF696868" Offset="1"/>
                    </LinearGradientBrush>
                </Label.Foreground>
            </Label>
        </Grid>
    </Border>
</Window>
