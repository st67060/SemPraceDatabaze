<Window x:Class="Aplikace.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aplikace" xmlns:entity="clr-namespace:Aplikace.data.Entity"
        mc:Ignorable="d"
        Height="600" Width="900" ResizeMode="NoResize" Background="Transparent" WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True" >

    <Window.Resources>

        <Style TargetType="TabItem" x:Key="ModernTabItemStyle">
            <Setter Property="Background" Value="AliceBlue"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10,0,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,0"/>



            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" Background="Transparent" CornerRadius="10" BorderBrush="AliceBlue" BorderThickness="0">
                            <ContentPresenter x:Name="ContentSite"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      ContentSource="Header"
                                      Margin="25,10"/>
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="3" Opacity="0.2"/>
                            </Border.Effect>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="AliceBlue" Opacity="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="Transparent"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="DataGridHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#007ACC" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridColumnHeader}">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="DataGridHeaderStylePatient" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#007ACC" />
            <Setter Property="Opacity" Value="0.9" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="Margin" Value="2,0,0,0" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridColumnHeader}">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>




    <Border CornerRadius="20" BorderBrush="Transparent" BorderThickness="0">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientStop Offset="0" Color="#bde0fe" />
                <GradientStop Offset="0.5" Color="#a2d2ff" />
                <GradientStop Offset="1" Color="#0096c7" />
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect ShadowDepth="3" Opacity="0.2"/>
        </Border.Effect>

        <Grid >



            <TabControl Name="mainTabControl"   TabStripPlacement="Left" BorderThickness="0,0,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Opacity="0.7" Margin="10,10,10,10">
                <TabControl.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Offset="0" Color="#bde0fe" />
                        <GradientStop Offset="0.5" Color="#a2d2ff" />
                        <GradientStop Offset="1" Color="#0096c7" />
                    </LinearGradientBrush>
                </TabControl.Background>
                <TabItem x:Name="UserTabItem"  Style="{StaticResource ModernTabItemStyle}" Margin="0,0,0,0">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/user.png" Width="48" Height="48" Margin="0,0,0,0" />

                        </StackPanel>
                    </TabItem.Header>
                    <Border Background=" white" BorderBrush=" white" Width="480" Height="325" CornerRadius="20">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="3" Opacity="0.2"/>
                        </Border.Effect>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="480" Height="325" Background="Transparent">
                            <StackPanel.Resources>
                                <Style TargetType="Label">
                                    <Setter Property="Foreground" Value="#333" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="FontSize" Value="24" />
                                    <Setter Property="Margin" Value="20 5 " />
                                </Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#333" />
                                    <Setter Property="FontSize" Value="20" />
                                    <Setter Property="Margin" Value="10 0" />
                                    <Setter Property="VerticalAlignment" Value="Center" />

                                </Style>
                            </StackPanel.Resources>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                                <Image x:Name="userImage" Width="90" Height="90"  />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                <Label Content="Username:" />
                                <TextBlock Text="{Binding Name}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                <Label Content="First Name:" />
                                <TextBlock Text="{Binding Employee.Name}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                <Label Content="Last Name:" />
                                <TextBlock Text="{Binding Employee.Surname}" />
                            </StackPanel>
                        </StackPanel>


                    </Border>

                </TabItem>
                <TabItem x:Name="mainMenuTabItem"  Style="{StaticResource ModernTabItemStyle}" >

                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/home.png" Width="48" Height="48" Margin="0 0 5 0" />

                        </StackPanel>
                    </TabItem.Header>

                    <!-- Obsah pro záložku 1 -->
                    <StackPanel>

                        <StackPanel HorizontalAlignment="Left" Width="620" Height="481" Margin="50,58,0,0">

                            <Label HorizontalAlignment="Center" Content="List of Employees" Width="190"/>
                            <DataGrid x:Name="employeeDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" GridLinesVisibility="None" RowBackground="#F3F3F3" AlternatingRowBackground="White" SelectionMode="Single" SelectionUnit="FullRow" Width="466" BorderThickness="0" Height="400">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" HeaderStyle="{StaticResource DataGridHeaderStyle}" />
                                    <DataGridTextColumn Header="Surname" Binding="{Binding Surname}" Width="*" HeaderStyle="{StaticResource DataGridHeaderStyle}" />
                                    <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="*" HeaderStyle="{StaticResource DataGridHeaderStyle}" />
                                    <DataGridTemplateColumn Header="Photo" Width="*" HeaderStyle="{StaticResource DataGridHeaderStyle}">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Image Source="{Binding Photo}" Width="90" Height="90" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>


                        </StackPanel>
                    </StackPanel>

                </TabItem>
                <TabItem x:Name="PatientTabItem"  Style="{StaticResource ModernTabItemStyle}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/medicalCard.png" Width="48" Height="48" Margin="0 0 5 0" />

                        </StackPanel>
                    </TabItem.Header>
                    <Grid HorizontalAlignment="Left" Width="766" Margin="0,34,0,15" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="280"/>
                        </Grid.ColumnDefinitions>

                        <Label HorizontalAlignment="Left" Content="Choose patient to see more details " Width="303" Grid.ColumnSpan="2" Margin="111,0,0,492" FontSize="14" Foreground="#FF312E2E"/>
                        <Label HorizontalAlignment="Left" Content="List of Patients " Width="190" Grid.ColumnSpan="2" Margin="154,-26,0,522"/>
                        <StackPanel x:Name="stackPanelPatients" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,30,87,69">
                            <DataGrid x:Name="patientDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" GridLinesVisibility="None" RowBackground="#F3F3F3" AlternatingRowBackground="White" SelectionMode="Single" SelectionUnit="FullRow" BorderThickness="0" Height="427" Width="478" SelectionChanged="patientDataGrid_SelectionChanged" >
                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="FontSize" Value="11" />
                                        
                                    </Style>
                                </DataGrid.CellStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding FirstName}" Width="50" HeaderStyle="{StaticResource DataGridHeaderStylePatient}" />
                                    <DataGridTextColumn Header="Surrname" Binding="{Binding LastName}" Width="55" HeaderStyle="{StaticResource DataGridHeaderStylePatient}" />
                                    <DataGridTextColumn Header="SSN" Binding="{Binding SocialSecurityNumber}" Width="70" HeaderStyle="{StaticResource DataGridHeaderStylePatient}" />
                                    <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="40" HeaderStyle="{StaticResource DataGridHeaderStylePatient}" />
                                    <DataGridTextColumn Header="Birth" Binding="{Binding DateOfBirth}" Width="60" HeaderStyle="{StaticResource DataGridHeaderStylePatient}" />
                                    <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="82" HeaderStyle="{StaticResource DataGridHeaderStylePatient}" />
                                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="130" HeaderStyle="{StaticResource DataGridHeaderStylePatient}" />


                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                        <Button x:Name="addPatient" Margin="0,489,93,0" Content="Add new patient" Click="addPatient_Click"></Button>
                        <StackPanel x:Name="addressDataStackPanel" Grid.Column="1" Margin="198,-26,-206,29" >
                            <Label Content="HealthCard:" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Label Content="Smokes:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                                <TextBox Text="{Binding HealthCard.Smokes}" Width="150" Margin="59,5,5,5" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Label Content="Pregnancy:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                                <TextBox Text="{Binding HealthCard.Pregnancy}" Width="150" Margin="35,5,5,5"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Label Content="Alcohol:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                                <TextBox Text="{Binding HealthCard.Alcohol}" Width="150" Margin="60,5,5,5"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Label Content="Sport:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                                <TextBox Text="{Binding HealthCard.Sport}" Width="150" Margin="77,5.3,5,5"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Label Content="Fillings:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                                <TextBox Text="{Binding HealthCard.Fillings}" Width="150" Margin="64,5,5,5"/>
                            </StackPanel>
                            <Label Content="Address:" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Label Content="City:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                                <TextBox Text="{Binding Address.City}" Width="150" Margin="90,5,5,5"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Label Content="PostalCode:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                                <TextBox Text="{Binding Address.PostalCode}" Width="150" Margin="29,5,5,5"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Label Content="StreetNumber:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                                <TextBox Text="{Binding Address.StreetNumber}" Width="150" Margin="3,5,5,5"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Label Content="Country:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                                <TextBox Text="{Binding Address.Country}" Width="150" Margin="55,5,5,5"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Label Content="Street:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                                <TextBox Text="{Binding Address.Street}" Width="150" Margin="73,5,5,5"/>
                            </StackPanel>
                        </StackPanel>

                    </Grid>
                </TabItem>
                <TabItem x:Name="calendarTabItem"  Style="{StaticResource ModernTabItemStyle}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/calendar.png" Width="48" Height="48" Margin="0 0 5 0" />

                        </StackPanel>
                    </TabItem.Header>
                    <!-- Obsah pro záložku 2 -->
                </TabItem>
                <TabItem x:Name="listTabItem"  Style="{StaticResource ModernTabItemStyle}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/list.png" Width="48" Height="48" Margin="0 0 5 0" />

                        </StackPanel>
                    </TabItem.Header>
                    <!-- Obsah pro záložku 3 -->
                </TabItem>
                <TabItem x:Name="chatTabItem"  Style="{StaticResource ModernTabItemStyle}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/chat.png" Width="48" Height="48" Margin="0 0 5 0" />

                        </StackPanel>
                    </TabItem.Header>
                    <!-- Obsah pro záložku 4 -->
                </TabItem>
                <TabItem x:Name="settingsTabItem"  Style="{StaticResource ModernTabItemStyle}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/assets/settings.png" Width="48" Height="48" Margin="0 0 5 0" />

                        </StackPanel>
                    </TabItem.Header>
                    <Grid HorizontalAlignment="Center" Width="770" Margin="0,46,0,15" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="280"/>
                            <ColumnDefinition Width="280"/>
                        </Grid.ColumnDefinitions>

                        <Label HorizontalAlignment="Left" Content="Choose non Admin User to Emulate" Width="320" Grid.ColumnSpan="2" Margin="36,-10,0,10"/>
                        <StackPanel x:Name="f" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,30,169,27">
                            <DataGrid x:Name="usersDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" GridLinesVisibility="None" RowBackground="#F3F3F3" AlternatingRowBackground="White" SelectionMode="Single" SelectionUnit="FullRow" BorderThickness="0" Height="497" Width="374" SelectionChanged="usersDataGrid_SelectionChanged" >
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="User Id" Binding="{Binding Id}" Width="*" HeaderStyle="{StaticResource DataGridHeaderStylePatient}" />
                                    <DataGridTextColumn Header="Username" Binding="{Binding Name}" Width="*" HeaderStyle="{StaticResource DataGridHeaderStylePatient}" />
                                    <DataGridTextColumn Header="Password" Binding="{Binding Password}" Width="*" HeaderStyle="{StaticResource DataGridHeaderStylePatient}" />
                                    <DataGridTextColumn Header="Employee" Binding="{Binding Employee.Surname}" Width="*" HeaderStyle="{StaticResource DataGridHeaderStylePatient}" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                        <StackPanel x:Name="r" Grid.Column="1" Margin="130,-26,-206,29"  VerticalAlignment="Top" HorizontalAlignment="Center">
                            <Button x:Name="emulateUserButton" Content="Emulate User" Background="White" Foreground="Blue" BorderBrush="Blue" BorderThickness="0"  Margin="10,70,10,10" Width="174" Height="38" Click="emulateUserButton_Click" Visibility="Visible">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Label HorizontalAlignment="Center" Content="Logs" Width="56" Grid.ColumnSpan="2" />
                            <DataGrid x:Name="logsDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" GridLinesVisibility="None" RowBackground="#F3F3F3" AlternatingRowBackground="White" SelectionMode="Single" SelectionUnit="FullRow" BorderThickness="0" 
                                      SelectionChanged="usersDataGrid_SelectionChanged" Height="361" >
                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="FontSize" Value="10" />
                                    </Style>
                                </DataGrid.CellStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="TableName" Binding="{Binding TableName}" Width="*" HeaderStyle="{StaticResource DataGridHeaderStylePatient}" />
                                    <DataGridTextColumn Header="ChangeType" Binding="{Binding ChangeType}" Width="*" HeaderStyle="{StaticResource DataGridHeaderStylePatient}" />
                                    <DataGridTextColumn Header="ChangeTime" Binding="{Binding ChangeTime}" Width="*" HeaderStyle="{StaticResource DataGridHeaderStylePatient}" />
                                </DataGrid.Columns>
                            </DataGrid>


                        </StackPanel>

                    </Grid>
                </TabItem>


            </TabControl>

            <Button x:Name="logoutButton" Width="100" Height="50" Content="Log Out" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" Foreground="#333" BorderThickness="0" FontSize="15" Click="logoutButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="white" />
                                <Setter Property="Opacity" Value="0.5" />
                                <!-- Barva pozadí při hover -->
                                <Setter Property="Foreground" Value="#333" />
                                <!-- Barva textu při hover -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>


            <Image x:Name="closeButton" Margin="868,5,5,568" Source="/assets/close.png" Stretch="Fill" MouseLeftButtonDown="closeButton_MouseLeftButtonDown" Height="27" Width="27"/>
        </Grid>
    </Border>
</Window>
